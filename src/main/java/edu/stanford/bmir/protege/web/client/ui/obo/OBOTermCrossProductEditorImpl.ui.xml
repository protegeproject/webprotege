<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:frame="urn:import:edu.stanford.bmir.protege.web.client.primitive"
             xmlns:obo="urn:import:edu.stanford.bmir.protege.web.client.ui.obo">
    <ui:style>
        .cross-product-editor {
            width: 100%;
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }
    </ui:style>

    <g:HTMLPanel>
        <table width="100%" cellpadding="0" cellspacing="0">
            <colgroup>
                <col width="100%"/>
            </colgroup>
            <tr>
                <td style="padding-bottom: 1px;">
                    <frame:DefaultPrimitiveDataEditor ui:field="genusField" addStyleNames="{style.cross-product-editor}" placeholder="Enter genus (class) name" classesAllowed="true"/>
                </td>
            </tr>
            <tr>
                <td>
                    <obo:OBOTermRelationshipEditor ui:field="relationshipsField" addStyleNames="{style.cross-product-editor}"/>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>