<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .outer {
            padding-top: 2px;
            border-top: solid 10px #ffffff;
            position: relative;
            padding-left: 5px;
            padding-right: 5px;
        }
        .note-subject-label {
            font-weight: bold;
            min-height: 20px;
            color: #676767;
            background: #ffffff;
        }
        .started-by-label {
            color: #b3b3b3;
            font-size: 10px;
            display: inline;
        }
        .status-label {
            font-size: 10px;
            display: inline;
        }
        .resolved-panel {
            /*position: absolute;*/
            top: 2px;
            right: 5px;
            background: white;
        }
        .status-resolved {
            color: green;
        }
        .status-open {
            color: maroon;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.outer}">
        <g:InlineLabel ui:field="subjectLabel" addStyleNames="{style.note-subject-label}"/>
        <g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{style.started-by-label}">started by</g:HTMLPanel>
            <g:InlineLabel ui:field="startedByLabel" addStyleNames="{style.started-by-label}"/>
        </g:HTMLPanel>
        <g:HTMLPanel addStyleNames="{style.resolved-panel}">
            <g:InlineLabel ui:field="statusLabel" addStyleNames="{style.status-label}"/>
            <g:Button text="Resolve" ui:field="toggleStatusButton" addStyleNames="web-protege-button-small"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>