<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            max-width: 350px;
            font-size: 13px;
            background-color: #ffffff;
            padding: 40px;
        }
        .main p {
            margin-bottom: 10px;
        }
        .main h1 {
            font-size: 16px;
            font-weight: bold;
        }
        .html {
            height: 100%;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:HTML ui:field="html" styleName="{style.html}"/>
    </g:HTMLPanel>
</ui:UiBinder>