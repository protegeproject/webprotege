<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            width: 100%;
        }
        .image {
            max-height: 50px;
            width: auto;
            cursor: pointer;
        }
        .placeHolder {
            color: #c0c0c0;
            border: 2px dashed #d0d0d0;
            border-radius: 12px;
            margin: 2px;
            height: 50px;
            width: 200px;
            padding-top: 8px;
            padding-left: 15px;
            padding-right: 15px;
            text-align: center;
            box-sizing: border-box;
            cursor: pointer;
            font-weight: normal;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}" ui:field="container">
        <g:Label ui:field="placeHolder" text="Drop images here or click to set image" addStyleNames="{style.placeHolder}"/>
        <g:Image ui:field="imageField" addStyleNames="{style.image}"/>
    </g:HTMLPanel>
</ui:UiBinder>