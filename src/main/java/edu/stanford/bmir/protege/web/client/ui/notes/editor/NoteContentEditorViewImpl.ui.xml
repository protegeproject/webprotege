<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:text="urn:import:edu.stanford.bmir.protege.web.client.ui.library.text"
             xmlns:richtext="urn:import:edu.stanford.bmir.protege.web.client.ui.library.richtext">
    <ui:style>
        .topic-field {
            margin-bottom: 12px;
        }
        .bar-padding {
            padding-top: 2px;
            padding-bottom: 2px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="web-protege-laf">
        <text:PlaceholderTextBox ui:field="topicField" width="60em" addStyleNames="{style.topic-field}" placeholder="Topic"/>
        <richtext:RichTextToolbarImpl ui:field="toolbar" styleName="{style.bar-padding}"/>
        <richtext:RichTextEditorViewImpl ui:field="bodyArea" width="60em"/>
    </g:HTMLPanel>
</ui:UiBinder>