<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel addStyleNames="web-protege-laf">
        <table>
            <colgroup>
                <col width="160px"/>
            </colgroup>
            <tr>
                <td>
                    <g:Label addStyleNames="web-protege-form-label">Current password</g:Label>
                </td>
                <td>
                    <g:PasswordTextBox ui:field="oldPasswordField" visibleLength="60"/>
                </td>
            </tr>
        </table>
        <div style="height: 20px;"/>
        <table>
            <colgroup>
                <col width="160px"/>
            </colgroup>
            <tr>
                <td>
                    <g:Label addStyleNames="web-protege-form-label">New password</g:Label>
                </td>
                <td>
                    <g:PasswordTextBox ui:field="newPasswordField" visibleLength="60"/>
                </td>
            </tr>
            <tr>
                <td>
                    <g:Label addStyleNames="web-protege-form-label">Confirm new password</g:Label>
                </td>
                <td>
                    <g:PasswordTextBox ui:field="confirmNewPasswordField" visibleLength="60"/>
                </td>
            </tr>
        </table>
    </g:HTMLPanel>
</ui:UiBinder>