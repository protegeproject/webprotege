<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            position: absolute;
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            /*width: 400px;*/
            /*height: 400px;*/
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
            overflow: hidden;
        }

        .linkTabBar {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            white-space: nowrap;
            font-size: 12px;
            font-weight: normal;
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }

        .newTabButton {
            position: absolute;
            right: 0;
            top: 0;
            margin-right: 5px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:TabBar ui:field="tabBar" addStyleNames="{style.linkTabBar}"/>
        <g:Button ui:field="newTabButton" text="Add new tab" addStyleNames="{style.newTabButton} {wp.buttons.btn} {wp.buttons.topBarButton}"/>
    </g:HTMLPanel>
</ui:UiBinder>
