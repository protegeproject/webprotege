<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:style>
        .main {
            display: flex;
            flex-direction: row;
            margin-bottom: 5px;
            margin-top: 3px;
            border-bottom: solid 1px #f1f1f1;
            overflow: hidden;
        }
        .tabBarContainer {
            flex-grow: 1;
            flex-shrink: 1;
            overflow: hidden;
        }
        .linkTabBar {
            white-space: nowrap;
            font-size: 12px;
            font-weight: normal;
        }
        .newTabButton {
            flex-grow: 0;
            flex-shrink: 0;
            margin-right: 5px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}" debugId="PerspectiveSwitcher">
        <g:SimplePanel addStyleNames="{style.tabBarContainer}">
            <g:TabBar ui:field="tabBar" addStyleNames="{style.linkTabBar}"/>
        </g:SimplePanel>
        <g:Button ui:field="newTabButton" text="{msg.addTab}" addStyleNames="{style.newTabButton} {wp.laf.topBarButton}"/>
    </g:HTMLPanel>
</ui:UiBinder>
