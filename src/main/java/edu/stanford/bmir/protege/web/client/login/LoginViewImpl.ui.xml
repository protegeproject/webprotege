<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="msg" type="edu.stanford.bmir.protege.web.client.Messages"/>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>

    <ui:style>
        .main {
            overflow: auto;
        }

        .center {
            margin-top: 50px;
            margin-left: auto;
            margin-right: auto;
            /*width: 400px;*/
            padding: 0;
            overflow: auto;
            bottom: 0;
            top: 0;
            color: #606060;
        }

        .centerPanel {
            max-width: 250px;
        }

        .message {
            width: 250px;
            margin-left: auto;
            margin-right: auto;
            padding-top: 20px;
            padding-bottom: 15px;
            font-size: 14px;
            text-align: center;
        }

        .bottomBar {
            display: flex;
            flex-direction: row;
            justify-content: flex-end;
        }

        .forgotPasswordButton {
            color: blue;
            text-decoration: underline;
            padding-top: 20px;
            padding-right: 0;
        }

        .logoContainer {
            width: 200px;
            margin-left: auto;
            margin-right: auto;
        }

        .logo {
            width: 200px;
            height: auto;
            position: relative;
            left: -20px;
        }

        .signup {
            float: right;
            margin: 3px;
            padding-right: 20px;
            padding-left: 20px;
        }

        .signin {
            width: 100%;
        }

        .info {
            margin-top: 50px;
            width: 800px;
            margin-right: auto;
            margin-left: auto;
            color: #c0c0c0;
            text-align: center;
            font-size: 10px;
        }

        .info a {
            color: #a0a0a0;
        }
    </ui:style>


    <g:HTMLPanel addStyleNames="{style.main}">
        <g:Button text="{msg.signUpForAccount}" ui:field="signUpForAccountButton"
                  addStyleNames="{style.signup} {wp.buttons.secondary}"/>
        <g:HTMLPanel addStyleNames="{style.center}">
            <g:HTMLPanel addStyleNames="{style.logoContainer}">
                <g:Image resource="{wp.protegeBlender}" addStyleNames="{style.logo}"/>
            </g:HTMLPanel>
            <g:HTMLPanel addStyleNames="{style.message}">
                <g:Label text="{msg.signInToContinue}"/>
            </g:HTMLPanel>

            <g:HTMLPanel addStyleNames="{wp.dialog.dialog} {style.centerPanel}">
                <g:Label text="{msg.userName}"/>
                <g:TextBox ui:field="userNameField" visibleLength="30"/>
                <g:Label text="{msg.password}"/>
                <g:PasswordTextBox ui:field="passwordField" visibleLength="30"/>
                <div style="height: 20px;"/>
                <g:Button ui:field="signInButton" text="{msg.signIn}"
                          addStyleNames="{wp.buttons.primary} {style.signin}"/>
                <g:HTMLPanel addStyleNames="{style.bottomBar}">
                    <g:Anchor text="{msg.forgotUserNameOrPassword}" ui:field="forgotPasswordButton"
                              addStyleNames="{style.forgotPasswordButton}"/>
                </g:HTMLPanel>
            </g:HTMLPanel>
        </g:HTMLPanel>

        <g:HTMLPanel addStyleNames="{style.info}">
            <p>WebProtege is developed by the Protege team in the
                Biomedical Informatics
                Research Group (BMIR)
                at Stanford University, California, USA.
            </p>


            <p>The work is supported by Grant GM121724 from the National Institute
                of General Medical Sciences
                at the United States National Institutes of Health.
            </p>
            <p>
                <a href="html/privacy.html" target="_blank">
                    Privacy Policy</a>.
                <a href="html/termsofuse.html" target="_blank">Terms of Use</a>
            </p>


        </g:HTMLPanel>


    </g:HTMLPanel>

</ui:UiBinder>