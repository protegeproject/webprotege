<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .progress-panel {
            width: 400px;
            padding: 30px;
            background: #ffffff;
        }

        .title-style {
            font-size: 18px;
            padding-bottom: 3px;
        }


        .progress-animation {
        }

        .message-style {
            font-weight: normal;
            font-size: 12px;
        }

    </ui:style>
    <g:HTMLPanel addStyleNames="{style.progress-panel}">
        <div style="display: inline-block; vertical-align: middle;">
            <g:Image url="images/progress.gif" addStyleNames="{style.progress-animation}"/>
        </div>
        <div style="display: inline-block; padding-left: 20px; vertical-align: middle;">
            <g:Label ui:field="titleText" addStyleNames="{style.title-style}"/>
            <g:Label ui:field="messageText" addStyleNames="{style.message-style}"/>
        </div>


    </g:HTMLPanel>
</ui:UiBinder>