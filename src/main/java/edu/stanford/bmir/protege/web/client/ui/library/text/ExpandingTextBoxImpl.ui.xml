<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>

        textarea, pre {
            margin: 0;
            padding: 0;
            outline: 0;
            border: 0;
        }

        .expandingarea {
            position: relative;
            /*border: solid 1px #00ffff;*/
            /*background: #fff;*/
        }

        .expandingarea > textarea,
        .expandingarea > pre {
            /*padding: 5px;*/
            /*background: transparent;*/
            /*font: inherit;*/
            /*font: 400 13px/16px helvetica, arial, sans-serif;*/
            white-space: pre-wrap;
            word-wrap: break-word;
        }

        .expandingarea > textarea {
            box-sizing: border-box;
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            overflow: hidden;
        }

        .expandingarea.active > textarea {
            overflow: hidden;
            position: relative;
            top: 0;
            left: 0;
            height: 100%;
            resize: none;
        }

        .expandingarea > pre {
            visibility: hidden;
            color: #00ffff;
            font-size: 12px;
            padding-left: 22px;
            padding-bottom: 2px;
            padding-right: 2px;
            padding-top: 2px;
            font-family: tahoma, sans-serif;
            border: 1px solid transparent;
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            -ms-box-sizing: border-box;
            line-height: 16px;

        }

        .button-loc {
            /*background: none repeat scroll 0 0 transparent;*/
            /*border: medium none;*/
            /*color: transparent;*/
            cursor: pointer;
            /*float: right;*/
            /*float: left;*/
            top: 1px;
            right: 1px;
            padding: 2px;
            position: absolute;
            /*width: 18px;*/

        }

        .expandingarea > a {
            color: #d3d3d3;
        }

        .expandingarea > a:hover {
            color: #a9a9a9;
        }

    </ui:style>

    <g:HTMLPanel addStyleNames="{style.expandingarea}">
        <!--<div class="{style.expandingarea}">-->
            <pre class="{wp.style.classIconInset}"><span/><br/></pre>
            <g:SuggestBox ui:field="suggestBox"/>
            <g:Anchor addStyleNames="{style.button-loc}" text="&#x25B6;" title="Navigate to entity" ui:field="anchor"/>
        <!--</div>-->
    </g:HTMLPanel>
    <!--<g:HTMLPanel>-->
        <!--<div class="{style.expandingarea}">-->
            <!--<pre><span/><br/></pre>-->
            <!--<g:TextArea ui:field="textArea"/>-->
        <!--</div>-->
    <!--</g:HTMLPanel>-->
</ui:UiBinder>
