<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:cellview="urn:import:com.google.gwt.user.cellview.client">
    <ui:style>
        .usage-view {

        }

        .top-bar-style {
            position: absolute;
            top: 0px;
            height: 24px;
            left: 0px;
            right: 0px;
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }

        .usage-grid-style {
            position: absolute;
            top: 24px;
            bottom: 0px;
            left: 0px;
            right: 0px;
        }

        .filter-label {
            border: FFE884 solid 1px;
            font-weight: bold;
            padding-left: 20px;
            padding-right: 20px;
            padding-top: 2px;
            padding-bottom: 2px;
            height: 20px;
            border: solid 1px #dcdcdc;
            width: 100%;
            box-sizing: border-box;
            -moz-box-sizing: border-box;
            -webkit-box-sizing: border-box;
        }
    </ui:style>
    <g:HTMLPanel width="100%" height="100%">
        <g:HTMLPanel styleName="{style.top-bar-style}">
            <table width="100%">
                <colgroup>
                    <col width="10px"/>
                    <col width="*"/>
                </colgroup>
                <tr>
                    <td>
                        <g:Button text="Filter ..." ui:field="filterButton" height="18px" addStyleNames="web-protege-button-small {style.filter-label}"/>
                    </td>
                    <td>
                        <g:Label ui:field="filterMessage" visible="false" addStyleNames="web-protege-warning-label" text="Results are filtered"/>
                    </td>
                </tr>
            </table>
        </g:HTMLPanel>
        <g:HTMLPanel styleName="{style.usage-grid-style}">
            <cellview:DataGrid ui:field="dataGrid" width="100%" height="100%"/>
        </g:HTMLPanel>
    </g:HTMLPanel>

</ui:UiBinder>