<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:frame="urn:import:edu.stanford.bmir.protege.web.client.ui.frame"
             xmlns:primitive="urn:import:edu.stanford.bmir.protege.web.client.primitive">

    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeResourceBundle"/>

    <g:HTMLPanel styleName="web-protege-laf" addStyleNames="{wp.css.formMain}">

        <div class="{wp.css.formGroup}">
            <g:Label text="Display name" styleName="{wp.css.formLabel}"/>
            <g:TextBox ui:field="displayNameField" width="100%"/>
        </div>

        <div class="{wp.css.formGroup}">
            <g:Label text="IRI" addStyleNames="{wp.css.formLabel}"/>
            <g:TextBox ui:field="iriField" width="100%"/>
        </div>


        <div style="height: 30px;"/>

        <g:Label text="Annotations" addStyleNames="{wp.css.formLabel}"/>
        <frame:PropertyValueListEditor ui:field="annotations"/>

        <div style="height: 30px;"/>

        <g:Label text="Domain" addStyleNames="{wp.css.formLabel}"/>
        <primitive:PrimitiveDataListEditor ui:field="domains"/>

        <div style="height: 30px;"/>

        <g:Label text="Range" addStyleNames="{wp.css.formLabel}"/>
        <primitive:PrimitiveDataListEditor ui:field="ranges"/>

    </g:HTMLPanel>
</ui:UiBinder>
