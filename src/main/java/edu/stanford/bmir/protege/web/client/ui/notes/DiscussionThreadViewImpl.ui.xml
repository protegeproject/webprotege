<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .thread-style {
            /*line-height: 12px;*/
        }
        .button-bar-style {
            padding: 2px;
        }
    </ui:style>
    <g:HTMLPanel height="100%" width="100%" addStyleNames="{style.thread-style}">
        <g:HTMLPanel addStyleNames="{style.button-bar-style}">
            <g:Button ui:field="postNewTopicButton" text="Post new topic" addStyleNames="button-style"/>
        </g:HTMLPanel>
        <g:ScrollPanel height="100%" width="100%">
            <g:FlexTable ui:field="notesList"  height="100%" width="100%"/>
        </g:ScrollPanel>
    </g:HTMLPanel>
</ui:UiBinder>
