<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .main {
            padding: 3px;
            padding-left: 10px;
        }
        .main:hover {
            background: #f0f0f0;
        }
        .checkBox {
            padding: 4px;
        }
        .checkBox input {
            padding-right: 2px;
        }
        .checkBox label {
            padding-left: 2px;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:CheckBox ui:field="checkBox" addStyleNames="{style.checkBox}"/>
    </g:HTMLPanel>
</ui:UiBinder>