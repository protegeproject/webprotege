<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="wp" type="edu.stanford.bmir.protege.web.resources.WebProtegeClientBundle"/>
    <ui:style>
        .main {
            display: flex;
            flex-direction: row;
            align-items: center;
        }
        .placeholderLabel {

        }
        .container {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
            justify-items: flex-start;
            align-items: center;
        }
        .addButton {
            margin-left: 1rem;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:Label ui:field="placeholder" addStyleNames="{style.placeholderLabel}"/>
        <g:HTMLPanel ui:field="container" addStyleNames="{style.container}">
            <g:Button ui:field="addTokenButton" addStyleNames="{wp.buttons.addButton} {style.addButton}"/>
        </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>
